.content
  .page-header
    %h1="Edit: #{@project}/#{@page_name}"
  .page-content
    %form{action: "/projects/#{@project}/pages/#{@page_name}/save", method: "post"}
      %input{type:"hidden", name: "id", value: "#{@page[:id]}"}
      %input{type:"hidden", name: "project_id", value: "#{@page[:project_id]}"}
      .pull-right
        %a.btn{href:"http://redcloth.org/textile"}
          %i.icon-question-sign
          Help
        %a.btn{href: "/projects/#{@project}/pages/#{@page}"}="Cancel"
        %input.btn.btn-primary{type: "submit", value:"Save"}
      %textarea.span12{name: 'content', cols: 300, rows: 24}=@page[:content]
      .pull-right
        %a.btn{href:"http://redcloth.org/textile"}
          %i.icon-question-sign
          Help
        %a.btn{href: "/projects/#{@project}/pages/#{@page}"}="Cancel"
        %input.btn.btn-primary{type: "submit", value:"Save"}
