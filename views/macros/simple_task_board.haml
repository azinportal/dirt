%h5=caption
.row
  %div{class: "#{span} taskboard-label"}
  - lanes.each do |lane|
    %div{class: "#{span} taskboard-label"}
      %h6=lane
- streams.each do |stream|
  .row
    %div{class: "#{span} taskboard-label"}
      %h6=stream[:Subject]
    - lanes.each do |lane|
      %div{class: "#{span}"}
        - cards(:stream => stream, :lane => lane).each do |card|  
          .card
            =card[:id]
            %br/
            =card[:Owner]
            %br/
            =card[:Subject]
            %br/


    